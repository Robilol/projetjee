<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>

    <env-entry>
        <env-entry-name>db-host</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>localhost</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>db-login</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>root</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>db-pwd</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>Blatakla#3615</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>db-port</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>3306</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>db-name</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>jee</env-entry-value>
    </env-entry>
</web-app>
